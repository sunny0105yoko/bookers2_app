<%= render 'books/list', book: @book_v, user: current_user %>
<h1>Book detail</h1>
<div>
  <p>Tittle：<%= @book.title %></p>
  <p>opinion</p>：<%= @book.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", book_path(@book), method: :edit %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>
</div>