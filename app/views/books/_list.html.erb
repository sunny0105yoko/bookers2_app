<p id="notice"></p>
<h2>User info</h2>
<!-- ユーザーの詳細 -->
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
     <tr>
       <th>name</th>
       <th><%= user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= user.introduction %></th>
     </tr>
    </tbody>
  </table>
  
  <% if user = current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>
  <% end %>
</div>

<!--ユーザー投稿画面　-->
<h2 class="mt-3">New book</h2>
<%= form_with model:book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>