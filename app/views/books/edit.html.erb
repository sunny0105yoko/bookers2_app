<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:update_book_path(@book.id),method: :patch do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_field :body %><br>

<%= f.submit 'Update Book', class: 'btn btn-sm btn-success' %><br>

<%= link_to "Show",  book_path(@book.id) %>
<%= link_to "Back", "/books" %>
  
<% end %>
</div>
</div>
</div>