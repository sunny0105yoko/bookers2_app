<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
      <h1>User info</h1>
  <% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%><br>
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %><br>  
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"input introduction", placeholder:" Introduction"%><br>
  <%= f.submit "Update User" %><br>
<% end %>
</div>
</div>
</div>
